rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Is Authenticated AND NOT ANONYMOUS
    function isAuthenticated() {
      return request.auth != null && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    // Helper: Is Owner of User Profile
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper: Is Coach
    function isCoach() {
       // Check if the user document exists and has role 'coach'
       return isAuthenticated() && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coach';
    }

    // --- Users ---
    match /users/{userId} {
      allow read: if isAuthenticated(); 
      allow create: if isAuthenticated() && request.auth.uid == userId; 
      allow update, delete: if isOwner(userId) || isCoach(); // Coach might need to update/delete athletes? Lets keep safe for now
    }

    // --- Routine Templates (Shared/Private) ---
    // SOLO COACH PUEDE CREAR/EDITAR PLANTILLAS
    match /routine_templates/{templateId} {
       allow read: if isAuthenticated();
       allow write: if isCoach(); 
    }
    
    // --- Assignments (Asignaciones de rutina) ---
    match /assignments/{assignmentId} {
        // Leer: Atleta due単o o Coach due単o
        allow read: if isAuthenticated() && (
            resource.data.athleteId == request.auth.uid || 
            resource.data.coachId == request.auth.uid
        );
        
        // Crear: SOLO COACH
        allow create: if isCoach();

        // Actualizar: 
        // Coach: Todo
        // Atleta: Solo el estado de completado (usado al finalizar workout)
        allow update: if isCoach() || (isAuthenticated() && resource.data.athleteId == request.auth.uid);
    }

    // --- Workout Logs (Registro de entrenamientos) ---
    match /workout_logs/{logId} {
       // Leer: Due単o o Coach
       allow read: if isAuthenticated() && (
          resource.data.userId == request.auth.uid || isCoach()
       );
       // Escribir: Solo el due単o (Atleta)
       allow create, update: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // --- Weight/Measurement Logs ---
    match /weight_logs/{logId} {
      allow read, write: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid || request.resource.data.userId == request.auth.uid);
    }
    match /measurement_logs/{logId} {
      allow read, write: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid || request.resource.data.userId == request.auth.uid);
    }
    
    // --- Ejercicios (Biblioteca Global o Custom) ---
    // SOLO COACH PUEDE CREAR/EDITAR EJERCICIOS
    match /ejercicios/{ejercicioId} {
      allow read: if isAuthenticated();
      allow write: if isCoach();
    }

    // --- Rutinas Legacy ---
    // SOLO COACH PUEDE CREAR/EDITAR RUTINAS BASE
    match /rutinas/{rutinaId} {
      allow read: if isAuthenticated();
      allow write: if isCoach();
    }
  }
}
